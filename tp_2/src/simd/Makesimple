.PHONY= clean clean_all build

OBJ = simple.o simdPrewitt.o


# Compila para debugging y elimina los *.o
build: debug clean

# Compila para debugging
debug: $(OBJ)
	gcc -g -o debug $(OBJ)
	

simple.o:
	gcc -g -c simple.c -o simple.o
	
#cImpl.o:
#	gcc -c cImpl.c -o cImpl.o -g
	
	
%.o: %.asm
	nasm -felf -g -o $@ $^
	

clean:
	rm -f *.o
	
clean_all: clean
	rm -f debug *~
	

